---
import { Image, Picture } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";
import post05Img from '@images/post-05.png';
---

<MainLayout title="Imagenes">
    <h1 class="text-5xl text-white">Imagenes</h1>
    <img 
        loading="eager" 
        src="/assets/images/post-05.png" 
        width="250"
        height="250"
        alt="something">

    <Image 
        loading="eager"
        src={ post05Img }
        width="250"
        height="250"
        alt="carga por astro"
    />

    <h1>Quality Low</h1>
    <Image
        src={post05Img}
        quality="low"
        width="250"
        height="250"
        alt="Imagen en baja calidad"
    ></Image>

    <h1>Quality Middle</h1>
    <Image
        src={post05Img}
        quality="mid"
        width="250"
        height="250"
        alt="Imagen en baja calidad"
    ></Image>

    <h1>Quality High</h1>
    <Image
        src={post05Img}
        quality="high"
        width="250"
        height="250"
        alt="Imagen en baja calidad"
    ></Image>

    <h1>Other Formats</h1>
    <Image
        src={post05Img}
        format="jpg"
        quality="low"
        width="250"
        height="250"
        alt="Imagen en baja calidad"
    ></Image>

    <h1>Picture</h1>
    <Picture
        src={post05Img}
        format="jpg"
        widths={[240, 540, 720, post05Img.width]}
        sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`}
        alt="Imagen con elemento picture"
    />

    
    <div style={{
        height: '3000px',
    }}>
    </div>
    
    <img loading="lazy" src="/assets/images/post-01.png" alt="">
</MainLayout>

<style>
    h1 {
        @apply text-white mt-10
    }
</style>